{
    "compilerOptions": {
        "target": "es6",
        "strictNullChecks": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./build",
        "rootDir": "./src",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": true,
        // "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "convenience-functions": ["./convenience-functions"],
            "@export/*": ["./export/*"],
            "file/*": ["./file/*"]
        }
    },
    "include": ["src"]
}
